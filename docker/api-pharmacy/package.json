{
  "name": "pharmacy-service",
  "version": "1.0.0",
  "private": true,
  "description": "servicio de obtención de farmacias de la region metropolitana según comuna",
  "main": "app.js",
  "scripts": {
    "start": "nodemon -x babel-node -r ../../node_modules/dotenv/config src/app.js ",
    "build": "npm run clean && babel src --out-dir dist && npm run copy",
    "clean": "rimraf -rf dist",
    "copy" : "cp -r ./dist ../../docker/api-pharmacy && cp ./package.json ../../docker/api-pharmacy && cp .env ../../docker/api-pharmacy"
  },
  "keywords": [
    "express",
    "nodejs",
    "docker",
    "microservice"
  ],
  "author": "carlos godoy",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.6.0",
    "@babel/runtime": "^7.6.3",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "http-status": "^1.4.0",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "babel-jest": "^24.9.0",
    "copy-dir": "^1.2.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "rimraf": "^3.0.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "text"
    ]
  }
}
